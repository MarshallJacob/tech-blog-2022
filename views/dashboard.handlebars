{{!-- Render the dashboard page for the user when signed in --}}
<div class="container" id="dash-board">
    <section class="mb-5">
        <div class="card-header bg-info h2 text-white text-center w-100 border border-4">Current Posts</div>

        <div>
            <ul class="p-1">
                {{!-- Checks for existing posts then loops over to display all of the users posts --}}
                {{#if posts.length}}
                {{#each posts as |post|}}
                <div class="border border-4 m-1">
                    <li class="d-flex">
                        <div class="p-2">
                            <p>{{format_date date_created}}: {{title}} || Post {{id}}</p>
                        </div>
                        </a>
                        <button class="d-inline ml-auto m-1 ms-auto" data-id="{{id}}"><a class="a"
                                href="/post/{{id}}">View Post</a></button>
                        <button class="d-inline ml-auto m-1 deleteBtn" data-id="{{id}}">Delete</button>
                    </li>
                </div>
                {{/each}}
                {{else}}
                <p class="font-italic mt-2 text-center">You don't have any posts... Make some!</p>
                {{/if}}
            </ul>
        </div>
    </section>

    <section class="card mb-5 hide" id="postForm">
        <div class="card-header bg-dark text-white">Create New Post</div>
        <div class="card-body">
            <form class="newPostForm">
                <div>
                    <label class="form-label">Post Title:</label>
                    <input class="form-input w-100 mb-2" id="postTitle" type="text" name="title" />
                </div>
                <div>
                    <label class="form-label">Post Content:</label>
                    <input class="form-input w-100 mb-2" id="postContent" type="text" name="post" />
                </div>

                <button type="submit" class="bg-info text-white" id="submitPost">Submit</button>
            </form>
        </div>
    </section>
</div>
<div class="text-center mt-3">
    {{!-- logic checking for posts and displays posts if they exist --}}
    {{#if posts.length}}
    <button type="button" class="mx-auto title" style="width: 200px;" id="createPost">Post your Post</button>
    <button class="d-inline ml-auto m-1 ms-auto updatePost" type="button" data-bs-target="#staticBackdrop"
        data-bs-toggle="modal" data-id="{{id}}">Update
        Post</button>
    {{else}}
    <button type="button" class="mx-auto title" style="width: 200px;" id="createPost">Post your Post</button>
    {{/if}}
</div>

<div class="modal-dialog modal-dialog-centered hide modalBtn">
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header fw-bolder">Update Post</div>
                <p class="mx-3 fw-bold">Post Number:</p>
                <input class="modal-body px-3 mx-3" type="text" id="PostID" name="postId">
                <p class="m-3 fw-bold">Post Title:</p>
                <input class="modal-body px-3 mx-3" type="text" id="updateTitle" name="updateTitle">
                <p class="m-3 fw-bold">Post Content:</p>
                <input class="modal-body px-3 mx-3" type="text" id="updateContent" name="updateContent">
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="modalUpdate">Update Post</button>
                </div>
            </div>
        </div>
    </div>
</div>

